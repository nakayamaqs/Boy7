@using Boy8.ViewModels
@model LoginViewModel

@{
    ViewBag.Title = "欢迎登陆";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>请使用本站账户登陆</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Baby.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Baby.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Baby.Birthday, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Baby.Birthday, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Baby.Male, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @*@Html.TextBoxFor(m => m.Baby.Male, new { @class = "form-control" })*@
                            <div class="col-xs-4 col-md-1">
                                <div class="input-group">
                                    <span class="input-group-addon bb-form-span">
                                        @*<input type="radio" name="parent" /> 男孩*@
                                        @Html.RadioButtonFor(m => m.Baby.Male, new { name = "male" })  男孩
                                    </span>
                                    <span class="input-group-addon bb-form-span">
                                        @*<input type="radio" name="male" /> 女孩*@
                                        @Html.RadioButtonFor(m => m.Baby.Male, new { name = "male" })  女孩
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelForModel("父亲 / 母亲", new { @class = "col-md-2 control-label" })
                        <div class="col-xs-4 col-md-1">
                            <div class="input-group">
                                <span class="input-group-addon bb-form-span">
                                    @*<input type="radio" name="parent" />*@ 父亲
                                    @Html.RadioButtonFor(m => m.Baby.Parents, new { name = "parent" }) 父亲
                                </span>
                                <span class="input-group-addon bb-form-span">
                                    @*<input type="radio" name="parent" />*@ 母亲
                                    @Html.RadioButtonFor(m => m.Baby.Parents, new { name = "parent" }) 母亲
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("注册新用户", "Register")
                    </p>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }
            </section>
        </div>
        <div class="col-md-5">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}